@(Html.Kendo().AutoComplete()
                .Name("questions")
                .DataTextField(nameof(SearchQuestionViewModel.Title))
                .MinLength(2)
                .HtmlAttributes(new { style = "width:100%" })
                .Placeholder("Search any question here...")
                .Height(400)
                .DataSource(source => source
                    .Custom()
                    .Group(g => g.Add(nameof(SearchQuestionViewModel.ExamName), typeof(string)))
                    .Transport(transport => transport
                      .Read(read =>
                      {
                      read.Action("Read", "SearchQuestion")
                          .Data("onAdditionalData");
                  }))
                    .ServerFiltering(true)).Deferred()
)
