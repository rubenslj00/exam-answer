@model ExamViewModel

@{
    ViewData["title"] = Model.Title;
    ViewData["description"] = Model.Description;
}
<div class="k-block k-info-colored center">
    <div class="k-header k-info-colored">
        <h1>
            @ViewData["title"]
        </h1>
    </div>
    <h2>
        @ViewData["description"]
    </h2>
</div>
@{
    Model.ShowUdemy = false;
    for (int i = 0; i < Model.Questions.Count; i++)
    {
        if (i % 5 == 0 && i < 25)
        {
            <div class="center">
                @if (!Html.ViewContext.HttpContext.IsMobileBrowser())
                {
                    @Html.Raw(Html.GetAddsenseAdd(AdsenseType.Fixed_970_90))
                }
                else
                {
                    @Html.Raw(Html.GetAddsenseAdd(AdsenseType.Fixed_320_100))
                }
            </div>
        }
        Model.Questions[i].ShowAdsInQuestion = false;
        <partial name="~/views/shared/question.cshtml" model="@Model.Questions[i]" />
        <br />
    }
}